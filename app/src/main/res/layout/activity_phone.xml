<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Spark"
    tools:deviceIds="wear_square"
    android:id="@+id/square_layout"
    android:background="#000"
    android:keepScreenOn="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/decrease_participant"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:longClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Participant"
        android:id="@+id/lbl_participant"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/increase_participant"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:longClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/count_participant"
        android:layout_below="@+id/lbl_participant"
        android:layout_centerHorizontal="true"
        android:textColor="#33B5E5"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/decrease_task"
        android:layout_below="@+id/decrease_participant"
        android:layout_alignEnd="@+id/decrease_participant"
        android:layout_alignRight="@+id/decrease_participant"
        android:textSize="30dp"
        android:layout_marginTop="60dp"
        android:textColor="#FFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/increase_task"
        android:layout_alignBottom="@+id/decrease_task"
        android:layout_alignStart="@+id/increase_participant"
        android:layout_alignLeft="@+id/increase_participant"
        android:textSize="30dp"
        android:textColor="#FFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Task"
        android:id="@+id/lbl_task"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:layout_alignTop="@+id/decrease_task" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/count_task"
        android:layout_centerHorizontal="true"
        android:textColor="#33B5E5"
        android:textStyle="bold"
        android:layout_below="@+id/lbl_task" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/activator"
        android:textColor="#FFF"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_alignRight="@+id/increase_task"
        android:layout_alignEnd="@+id/increase_task"
        android:layout_below="@+id/task_label"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Watch battery: 0%"
        android:id="@+id/watch_battery"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00"
        android:id="@+id/timer"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textSize="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Task label"
        android:id="@+id/task_label"
        android:layout_below="@+id/decrease_task"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>
